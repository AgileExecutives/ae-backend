{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Password Reset Template Contract",
  "description": "Data contract for password reset email template rendering",
  "required": [
    "AppName",
    "RecipientName", 
    "CompanyName",
    "ResetURL",
    "SupportEmail"
  ],
  "properties": {
    "AppName": {
      "type": "string",
      "description": "Application name displayed in email"
    },
    "RecipientName": {
      "type": "string",
      "description": "Name of the user receiving the reset email"
    },
    "CompanyName": {
      "type": "string",
      "description": "Company name"
    },
    "ResetURL": {
      "type": "string",
      "format": "uri",
      "description": "Password reset URL"
    },
    "SupportEmail": {
      "type": "string",
      "format": "email",
      "description": "Support email address"
    }
  }
}