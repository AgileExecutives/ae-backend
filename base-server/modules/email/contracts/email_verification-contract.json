{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Email Verification Template Contract",
  "description": "Data contract for email verification template rendering",
  "required": [
    "FirstName",
    "OrganizationName",
    "Email", 
    "Username",
    "VerificationURL",
    "VerificationCode"
  ],
  "properties": {
    "FirstName": {
      "type": "string",
      "description": "User's first name"
    },
    "OrganizationName": {
      "type": "string",
      "description": "Name of the organization"
    },
    "Email": {
      "type": "string",
      "format": "email",
      "description": "User's email address"
    },
    "Username": {
      "type": "string",
      "description": "User's username"
    },
    "VerificationURL": {
      "type": "string",
      "format": "uri",
      "description": "Email verification URL"
    },
    "VerificationCode": {
      "type": "string",
      "description": "6-digit verification code"
    }
  }
}